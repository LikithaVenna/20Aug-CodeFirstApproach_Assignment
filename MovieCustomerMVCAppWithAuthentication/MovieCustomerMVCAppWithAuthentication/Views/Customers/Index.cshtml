@model IEnumerable<MovieCustomerMVCAppWithAuthentication.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customer List</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Customer DOB</th>
            <th>Discount Rate</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var c in Model)
        {
        <tr>
            <td>@Html.ActionLink(c.Name, "Details", "Customers", new { id = c.Id }, null)</td>
            <td>@c.DOB.ToString("dd/MM/yyyy")</td>
            <td>@c.MembershipType.DiscountRate%</td>
        </tr>
        }
    </tbody>
</table>
